{
  "name": "manstack-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for manstack headless components",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "npm run typecheck --workspaces",
    "release": "npm run build && npm publish --workspaces --access public",
    "release:core": "npm run build --workspace=@manstack/core && npm publish --workspace=@manstack/core --access public",
    "release:react": "npm run build --workspace=@manstack/react && npm publish --workspace=@manstack/react --access public",
    "version:patch": "npm version patch --workspaces",
    "version:minor": "npm version minor --workspaces",
    "version:major": "npm version major --workspaces"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
